.library-wrapper()
  //- md-swipe-left="vm.changeTab(1)"
  //- md-swipe-right="vm.changeTab(-1)"
  //- md-swipe-down=""
  //- md-swipe-up="")
  app-header
  app-menu(class-name="desktop-menu")
  md-content.library-content
    md-tabs(
      md-dynamic-height=""
      md-border-bottom=""
      md-selected="vm.selectedIndex"
      md-center-tabs="true")

      //- Conversations
      md-tab(label='conversations')
        md-content.md-padding.tubs-content(
          md-selected="vm.selectedIndex")
          conversation-list(
            list="vm.conversationsList"
            on-indicator-click="vm.stopPropagation($event)"
            on-view-click="vm.viewConversation($data)"
            show-indicators="vm.showConversationIndicators")
          conversation-list(
            list="vm.conversationsToUserList"
            on-indicator-click="vm.stopPropagation($event)"
            on-view-click="vm.viewConversation($data)"
            to-user="vm.toUser")

  //- Video record & upload fab button
  video-fab-buttons(
    upload-btn-click="vm.uploadBtnClick()"
    record-btn-click="vm.recordBtnClick()")

  //- Record popup
  record-popup-wrapper(get-videos="vm.getVideos()")

  //- Upload popup
  upload-popup-wrapper(get-videos="vm.getVideos()")

  //- Feedback form
  feedback
