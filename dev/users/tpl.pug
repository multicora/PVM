.users-wrapper
  app-header
  .title-container
    h2.title List of users
  .users-content
    .title
      p.name First name
      p.name Second name
      p.email Email
    .user(ng-repeat="user in vm.users")
      p.name(ng-bind="user.firstName") Name
      p.name(ng-bind="user.secondname") Name
      p.email(ng-bind="user.email") Email
      .buttons
        .blocked-buttons(ng-if="!user.permanent")
          button.mdl-button.mdl-js-button.mdl-button--raised(ng-if="!user.blocked"
          ng-click="vm.blockUser(user.id)")
            | Block
          button.mdl-button.mdl-js-button.mdl-button--raised(ng-if="user.blocked"
          ng-click="vm.unblockUser(user.id)")
            | Unblock
        a.mdl-button.mdl-js-button.mdl-button--raised(ng-href="#!/user/{{user.id}}")
          | Edit
  .add-user.fab-buttons
    button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored(ng-click="vm.addUser()")
      i.material-icons add

  //- Add user popup
  popup.add-popup-container(ng-if="vm.showAddPopup")
    form.add-form({{action='', on='submit', }}='')
      p.popupTitle Add user
      md-input-container
        label User name
        input(
          type="text"
          ng-model="name")
      md-input-container
        label User email
        input(
          type="email"
          ng-model="email"
          required)
      .button-container
        button.mdl-button.mdl-js-button.mdl-button--raised.close(ng-click="vm.closeAddPopup()") close
        button.mdl-button.mdl-js-button.mdl-button--raised.save(
          ng-disabled="!email"
          ng-click="vm.inviteUser(email, name)") send