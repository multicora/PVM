.video-tile
  .video-placeholder(
    ng-if="!vm.video.attributes.thumbnail"
    ng-click="vm.onThumbnailClick()")
    img(src="/files/images/videoPlaceholder.svg")
    p Thumbnail is not available.
  img.photo(
    ng-if="vm.video.attributes.thumbnail"
    ng-src='data:image/png;base64,{{vm.video.attributes.thumbnail}}',
    alt=''
    ng-click="vm.onThumbnailClick()")
  .navigation-bar
    p.name.ellipsis(title='{{vm.video.attributes.name}}') {{vm.video.attributes.name}}
    md-menu.menu(
      ng-if="vm.showSendButton"
      md-position-mode="target-right target")
      md-button.menu-button.md-icon-button(
        ng-click="$mdMenu.open()"
        aria-label="Open menu")
        i.material-icons more_vert
      md-menu-content(ng-mouseleave="$mdMenu.close()")
        md-menu-item
          md-button(ng-click="vm.onDeleteVideo()") Delete
    md-button.md-icon-button.send(
      ng-if="vm.showSendButton"
      ng-click="vm.onSendClick()"
      aria-label="send")
      .fa.fa-paper-plane(aria-hidden="true")