header.main-header
  .navigation-components
    md-button.md-icon-button.header-menu-button(
      aria-label="Open menu"
      ng-click="vm.openMenu()")
      i.material-icons.menu-icon menu
    img.logo.pointer(src='/files/images/logo_bizkonect.svg')
    .notification-container
      md-menu(
        md-position-mode="target-right target"
        ng-if="vm.notifications.length")
        i.fa.fa-bell-o.notifications.mdl-badge.mdl-badge--overlap(
          aria-hidden="true"
          ng-click="$mdMenu.open()"
          data-badge="{{vm.notifications.length}}")
        md-menu-content.notification-menu-content
          md-menu-item.notification-item(
            ng-repeat="item in vm.notifications"
            ng-click="vm.openConversation(item.conversationId, item.id)")
            .colomn
              .name.ellipsis
                span(ng-if="item.metadata.firstName") {{item.metadata.firstName}}
                span.second-name(ng-if="item.metadata.secondName") {{item.metadata.secondName}}
              .text.ellipsis {{item.message}}
            .rigth-colomn
              md-button.md-icon-button.md-accent.button-close(
                aria-label="close"
                ng-click="vm.onClose(item.id, event)")
                md-icon.material-icons close
              .date {{item.date}}
  md-sidenav.md-sidenav-left.header-menu(
    md-component-id="left"
    md-whiteframe="4"
  )
    md-content
      .photo-container
        md-list-item.md-2-line.mobile-photos
          .md-avatar.photo(ng-if="!vm.user.photo || vm.user.photo === 'null'")
          .md-avatar.photo(
            ng-if="vm.user.photo && vm.user.photo != 'null'"
            ng-style="{backgroundImage: 'url('+ vm.user.photo + ')' }")
          .md-list-item-text
            h3 
              span.first-name(ng-if="vm.user.firstName") {{vm.user.firstName}}
              span(ng-if="vm.user.secondName") {{vm.user.secondName}}
            p {{vm.user.email}}
      app-menu(class-name="mobile-menu")