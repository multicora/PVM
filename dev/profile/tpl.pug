.profile-wrap
  app-header
  .title-container
    h2.title My profile
  .profile-container
    .profile-photo(
      ng-style="{backgroundImage: 'url('+ vm.newUser.photo + ')' }")
      div
        label(for="file")
          .upload-photo.btn
            input.hidden(type="file" id="file")
            i.material-icons file_upload
    p.errorMessage(ng-if="vm.fileError"
      ng-bind="vm.fileError")
    .button-container
      button.button-edit.btn.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored(
      type="button"
      ng-hide="vm.editMod"
      ng-click="vm.editMod = true")
        |Edit my profile
      button.button-edit.btn.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored(
      type="button"
      ng-show="vm.editMod"
      ng-click="vm.save()")
        |Save information
    .personal-info
      ul.mdl-list.info-content
        li.mdl-list__item
          .mdl-list__item-primary-content Personal information

        li.mdl-list__item
          .mdl-list__item-primary-content
            i.material-icons.mdl-list__item-icon person
            span(ng-hide="vm.editMod",
              ng-bind="vm.user.firstName")
            input.mdl-textfield__input(
              ng-show="vm.editMod"
              type="text"
              ng-model="vm.user.firstName"
              placeholder="Name")

        li.mdl-list__item
          .mdl-list__item-primary-content
            span.second-name(ng-hide="vm.editMod",
              ng-bind="vm.user.secondName")
            input.second-name.mdl-textfield__input(
              ng-show="vm.editMod"
              type="text"
              ng-model="vm.user.secondName"
              placeholder="Second Name")

        li.mdl-list__item
          .mdl-list__item-primary-content
            i.material-icons.mdl-list__item-icon phone
            span(ng-hide="vm.editMod",
              ng-bind="vm.user.phone")
            input.mdl-textfield__input(
              ng-show="vm.editMod"
              type="text"
              ng-model="vm.user.phone"
              placeholder="Phone")

        li.mdl-list__item
          .mdl-list__item-primary-content
            i.material-icons.mdl-list__item-icon mail
            span(ng-hide="vm.editMod",
              ng-bind="vm.user.email")
            input.mdl-textfield__input(
              ng-show="vm.editMod"
              type="email"
              ng-model="vm.user.email"
              placeholder="Email")

    .company-info
      ul.mdl-list.info-content
        li.mdl-list__item
          .mdl-list__item-primary-content Company information

        li.mdl-list__item
          .mdl-list__item-primary-content
            i.material-icons.mdl-list__item-icon work
            span(ng-hide="vm.editMod",
              ng-bind="vm.company.name")
            input.mdl-textfield__input(
              ng-show="vm.editMod"
              type="text"
              ng-model="vm.company.name"
              placeholder="Company Name")

        li.mdl-list__item
          .mdl-list__item-primary-content
            .company-logo(
              ng-style="{backgroundImage: 'url('+ vm.newUser.companyLogo + ')' }")
            div
              label(for="logo")
                .upload-logo
                  input.hidden(type="file" id="logo")
                  i.material-icons.btn file_upload

        li.mdl-list__item
          .mdl-list__item-primary-content
            i.material-icons.mdl-list__item-icon work
            span(ng-hide="vm.editMod",
              ng-bind="vm.user.company_position")
            input.mdl-textfield__input(
              ng-show="vm.editMod"
              type="text"
              ng-model="vm.user.company_position"
              placeholder="Company Position")