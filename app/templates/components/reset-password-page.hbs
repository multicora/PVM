<div class="vertical-aligned-middle reset-password full-page">
  <div class="reset-container">
    <h2 class="title">Reset Password</h2>
    <form class="reset-form" {{action 'reset' on='submit'}}>
      {{mdl-textfield label='New Password' type="password" value=password}}
      {{mdl-textfield label='Confirm Password' type="password" value=confirmPassword}}
      {{#if errorMessage}}
        <p class="error">Error: {{errorMessage}}</p>
      {{/if}}
      <div class="button-container">
        {{mdl-button isRaised=true type="submit" text='save'}}
      </div>
    </form>
  </div>
</div>