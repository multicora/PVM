<div class="video-record-container {{if isShown "shown"}}">
  <div class="popup">
    <form class="recordForm">
      <p class="popupTitle">Record your video</p>
      {{mk-videojs-record setup=setup ready="ready" finishRecord="finishRecord" startRecord="startRecord"}}
      <div class="videoNameContainer {{if disabledButton 'hidden' ''}}">
        {{input type="text" value=videoName placeholder="Enter video name"}}
      </div>
      <div class="button-container">
        <button class="cancel" {{action 'hidePopup'}}>cancel</button>
        <button class="save" {{action 'saveVideo'}} disabled={{disabledButton}}>save</button>
      </div>
    </form>
  </div>
</div>